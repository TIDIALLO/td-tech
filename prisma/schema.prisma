// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  STUDENT
  USER
}

enum ProjectCategory {
  WEB
  FULLSTACK
  IA
  AUTOMATISATION
}

enum CourseCategory {
  UNIVERSITE
  INSTITUT
  WEB
  IA
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Project {
  id          String          @id @default(cuid())
  title       String
  slug        String          @unique
  description String
  content     String
  image       String?
  category    ProjectCategory
  technologies String[]
  githubUrl   String?
  liveUrl     String?
  featured    Boolean         @default(false)
  published   Boolean         @default(true)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@map("projects")
}

model Service {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  content     String
  icon        String?
  price       String?
  featured    Boolean  @default(false)
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("services")
}

model Course {
  id          String         @id @default(cuid())
  title       String
  slug        String         @unique
  description String
  content     String
  image       String?
  category    CourseCategory
  level       String         @default("Débutant")
  duration    String?
  price       String?
  featured    Boolean        @default(false)
  published   Boolean        @default(true)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  modules CourseModule[]
  files   CourseFile[]
  videos  CourseVideo[]

  @@map("courses")
}

model CourseModule {
  id          String   @id @default(cuid())
  courseId    String
  title       String
  description String?
  order       Int
  content     String
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@map("course_modules")
}

model CourseFile {
  id        String   @id @default(cuid())
  courseId  String
  title     String
  fileName  String
  fileUrl   String
  fileType  String
  fileSize  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@map("course_files")
}

model CourseVideo {
  id          String   @id @default(cuid())
  courseId    String
  title       String
  description String?
  videoUrl    String
  thumbnail   String?
  duration    String?
  order       Int      @default(0)
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@map("course_videos")
}

model BlogPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String
  content     String
  image       String?
  tags        String[]
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("blog_posts")
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String
  read      Boolean  @default(false)
  replied   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contact_messages")
}

// ============================================
// ANALYTICS - Système de tracking pour l'agent IA WhatsApp
// ============================================

enum EventType {
  PAGE_VIEW
  CLICK
  SCROLL
  FORM_SUBMIT
  CONVERSION
  CUSTOM
}

model Visitor {
  id           String   @id @default(cuid())
  fingerprint  String   @unique // Identifiant unique du visiteur (hash)
  firstVisit   DateTime @default(now())
  lastVisit    DateTime @default(now())
  visitCount   Int      @default(1)
  country      String?
  city         String?
  device       String?  // mobile, desktop, tablet
  browser      String?
  os           String?
  referrer     String?  // Source du trafic
  utmSource    String?
  utmMedium    String?
  utmCampaign  String?

  pageViews PageView[]
  events    AnalyticsEvent[]

  @@map("visitors")
}

model PageView {
  id          String   @id @default(cuid())
  visitorId   String
  path        String   // /portfolio, /services, etc.
  title       String?  // Titre de la page
  referrer    String?  // Page précédente
  duration    Int?     // Temps passé en secondes
  timestamp   DateTime @default(now())

  visitor Visitor @relation(fields: [visitorId], references: [id], onDelete: Cascade)

  @@index([path])
  @@index([timestamp])
  @@map("page_views")
}

model AnalyticsEvent {
  id          String    @id @default(cuid())
  visitorId   String
  type        EventType
  category    String?   // bouton, formulaire, lien, etc.
  action      String?   // click, submit, scroll, etc.
  label       String?   // Description de l'événement
  value       Float?    // Valeur numérique optionnelle
  path        String?   // Page où l'événement s'est produit
  metadata    Json?     // Données supplémentaires
  timestamp   DateTime  @default(now())

  visitor Visitor @relation(fields: [visitorId], references: [id], onDelete: Cascade)

  @@index([type])
  @@index([timestamp])
  @@map("analytics_events")
}

model Conversion {
  id          String   @id @default(cuid())
  visitorId   String?
  type        String   // contact_form, newsletter, purchase, etc.
  value       Float?   // Valeur de la conversion
  source      String?  // Origine du trafic
  metadata    Json?    // Données supplémentaires
  timestamp   DateTime @default(now())

  @@index([type])
  @@index([timestamp])
  @@map("conversions")
}

// ============================================
// N8N & WHATSAPP INTEGRATION
// ============================================

model N8nWebhookLog {
  id          String   @id @default(cuid())
  webhookType String   // whatsapp_message, analytics_query, etc.
  payload     Json     // Données reçues
  response    Json?    // Réponse envoyée
  status      String   @default("received") // received, processed, failed
  phoneNumber String?  // Numéro WhatsApp (pour les messages)
  message     String?  // Message reçu
  aiResponse  String?  // Réponse de l'IA
  timestamp   DateTime @default(now())

  @@index([webhookType])
  @@index([timestamp])
  @@map("n8n_webhook_logs")
}

model DailyAnalyticsSummary {
  id              String   @id @default(cuid())
  date            DateTime @unique @db.Date
  totalVisitors   Int      @default(0)
  uniqueVisitors  Int      @default(0)
  totalPageViews  Int      @default(0)
  totalEvents     Int      @default(0)
  totalConversions Int     @default(0)
  topPages        Json?    // Array des pages les plus visitées
  topReferrers    Json?    // Sources de trafic
  deviceStats     Json?    // Répartition mobile/desktop
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([date])
  @@map("daily_analytics_summary")
}

